<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <!-- Menu -->
                <resource id="Magento_Backend::marketing">
                    <resource id="Magexperts_SeoSuite::menu_section" title="SEO Suite Section" sortOrder="20">
                        <resource id="Magexperts_SeoSuite::menu_config" title="Manage Settings" sortOrder="20" />
                    </resource>
                </resource>

                <!-- Settings -->
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magexperts_SeoSuite::config" title="SEO Suite Section" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>

            </resource>
        </resources>
    </acl>
</config>
