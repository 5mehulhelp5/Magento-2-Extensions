<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="mg-google" type="host">*.google.com</value>
                <value id="mg-google-ua" type="host">*.google.com.ua</value>
                <value id="mg-google-uk" type="host">*.google.co.uk</value>
                <value id="mg-google-nl" type="host">*.google.nl</value>
                <value id="mg-google-be" type="host">*.google.be</value>
                <value id="mg-google-de" type="host">*.google.de</value>
                <value id="mg-gstatic" type="host">*.gstatic.com</value>
                <value id="mg-googletagmanager-com" type="host">*.googletagmanager.com</value>
                <value id="mg-doubleclick-net" type="host">*.doubleclick.net</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="mg-googleapis-com" type="host">*.googleapis.com</value>
                <value id="mg-googletagmanager-com" type="host">*.googletagmanager.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="mg-googleanalytics" type="host">*.google-analytics.com</value>
                <value id="mg-google-com" type="host">*.google.com</value>
                <value id="mg-doubleclick-net" type="host">*.doubleclick.net</value>
                <value id="mg-googlesyndication-com" type="host">*.googlesyndication.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="mg-google" type="host">*.google.com</value>
                <value id="mg-google-ua" type="host">*.google.com.ua</value>
                <value id="mg-google-uk" type="host">*.google.co.uk</value>
                <value id="mg-google-nl" type="host">*.google.nl</value>
                <value id="mg-google-be" type="host">*.google.be</value>
                <value id="mg-google-de" type="host">*.google.de</value>
                <value id="mg-gstatic-com" type="host">*.gstatic.com</value>
                <value id="mg-doubleclick-net" type="host">*.doubleclick.net</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="mg-gstatic-com" type="host">*.gstatic.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="mg-google" type="host">*.google.com</value>
                <value id="mg-google-ua" type="host">*.google.com.ua</value>
                <value id="mg-google-uk" type="host">*.google.co.uk</value>
                <value id="mg-google-nl" type="host">*.google.nl</value>
                <value id="mg-google-be" type="host">*.google.be</value>
                <value id="mg-google-de" type="host">*.google.de</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
