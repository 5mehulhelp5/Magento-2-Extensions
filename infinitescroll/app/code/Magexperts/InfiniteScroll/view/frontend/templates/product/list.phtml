            function getParameterByName(name, url) {
                if (!url) {
                    url = window.location.href;
                }

                name = name.replace(/[\[\]]/g, "\\$&");

                var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"), results = regex.exec(url);
