<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Customer::customer">
                    <resource id="Magexperts_LoginAsCustomer::login" title="Login As Customer" sortOrder="50">
                        <resource id="Magexperts_LoginAsCustomer::login_button" title="Login As Customer Button" sortOrder="10" />
                        <resource id="Magexperts_LoginAsCustomer::login_log" title="Login As Customer Log" sortOrder="30" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magexperts_LoginAsCustomer::config_section" title="Magexperts LoginAsCustomer Section" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
